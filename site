                    <p>‚ö†Ô∏è –í–∞–∂–Ω–æ —Å–æ–±–ª—é–¥–∞—Ç—å –±–∞–ª–∞–Ω—Å: —á—Ä–µ–∑–º–µ—Ä–Ω–æ–µ —É–≤–ª–µ—á–µ–Ω–∏–µ –º–æ–∂–µ—Ç –ø—Ä–∏–≤–µ—Å—Ç–∏ –∫ —Å–æ—Ü–∏–∞–ª—å–Ω–æ–π –∏–∑–æ–ª—è—Ü–∏–∏, –Ω–æ –≤ —É–º–µ—Ä–µ–Ω–Ω—ã—Ö –¥–æ–∑–∞—Ö —à—É—Ç–µ—Ä—ã —Ç—Ä–µ–Ω–∏—Ä—É—é—Ç —Å—Ç—Ä–µ—Å—Å–æ—É—Å—Ç–æ–π—á–∏–≤–æ—Å—Ç—å –∏ –Ω–∞–≤—ã–∫–∏ —Ä–µ—à–µ–Ω–∏—è –ø—Ä–æ–±–ª–µ–º.</p>
                </div>
                <p>–ì–ª–∞–≤–Ω–æ–µ ‚Äî –¥–µ–ª–∞—Ç—å –ø–µ—Ä–µ—Ä—ã–≤—ã –∏ –ø–æ–º–Ω–∏—Ç—å –æ —Ä–µ–∞–ª—å–Ω–æ–º –º–∏—Ä–µ.</p>
            </section>

            <!-- –°—Ç—Ä–∞–Ω–∏—Ü–∞ 5: –ü–æ–¥–ø–∏—Å—å -->
            <section id="page5" class="page" data-page="5">
                <div class="signature-block">
                    <p>‚ú® –°–∞–π—Ç –ø—Ä–∏–Ω–∞–¥–ª–µ–∂–∏—Ç <br> –ú–∞—Ä—Ç—ã–Ω–æ–≤—É –ê–Ω–¥—Ä–µ—é –∏–∑ –≥—Ä—É–ø–ø—ã –¢–û-85 ‚ú®</p>
                    <p style="font-size: 1.5rem; margin-top: 30px; -webkit-text-fill-color: #b8d0e0;">2026 –≥–æ–¥</p>
                </div>
            </section>
        </div>
    </div>

    <!-- –ù–û–í–´–ô –§–£–¢–ï–† –° –ü–û–î–ü–ò–°–¨–Æ -->
    <footer class="site-footer">
        –í—Å–µ –ø—Ä–∞–≤–∞ –∑–∞—â–∏—â–µ–Ω—ã –û–û–û "–°–∏–∫—Å–µ–≤–µ–Ω"
    </footer>

    <!-- JavaScript –¥–ª—è –æ—Ç—Å–ª–µ–∂–∏–≤–∞–Ω–∏—è —Å–∫—Ä–æ–ª–ª–∞ –∏ –ø–æ–¥—Å–≤–µ—Ç–∫–∏ –Ω–æ–º–µ—Ä–∞ —Å—Ç—Ä–∞–Ω–∏—Ü—ã -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const sections = document.querySelectorAll('.page');
            const navLinks = document.querySelectorAll('.nav-link');
            
            // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏—è –∞–∫—Ç–∏–≤–Ω–æ–π —Å–µ–∫—Ü–∏–∏
            function updateActivePageOnScroll() {
                let currentPageId = '';
                
                // –ü—Ä–æ—Ö–æ–¥–∏–º –ø–æ –≤—Å–µ–º —Å–µ–∫—Ü–∏—è–º –∏ –ø—Ä–æ–≤–µ—Ä—è–µ–º, –∫–∞–∫–∞—è —Å–µ–π—á–∞—Å –≤ –∑–æ–Ω–µ –≤–∏–¥–∏–º–æ—Å—Ç–∏
                sections.forEach(section => {
                    const sectionTop = section.offsetTop - 100; // –ù–µ–º–Ω–æ–≥–æ –≤—ã—à–µ, —á—Ç–æ–±—ã —Å—Ä–∞–±–∞—Ç—ã–≤–∞–ª–æ —Ä–∞–Ω—å—à–µ
                    const sectionBottom = sectionTop + section.offsetHeight;
                    const scrollY = window.scrollY;
                    
                    if (scrollY >= sectionTop && scrollY < sectionBottom) {
                        currentPageId = section.getAttribute('id');
                    }
                });
                
                // –ï—Å–ª–∏ –Ω–∏—á–µ–≥–æ –Ω–µ –Ω–∞—à–ª–∏ (–Ω–∞–ø—Ä–∏–º–µ—Ä, –≤ —Å–∞–º–æ–º –Ω–∏–∑—É), –±–µ—Ä–µ–º –ø–æ—Å–ª–µ–¥–Ω—é—é —Å–µ–∫—Ü–∏—é
                if (!currentPageId) {
                    const lastSection = sections[sections.length - 1];
                    if (window.scrollY + window.innerHeight >= document.documentElement.scrollHeight - 50) {
                        currentPageId = lastSection.getAttribute('id');
                    }
                }

                // –£–±–∏—Ä–∞–µ–º –∫–ª–∞—Å—Å active —É –≤—Å–µ—Ö —Å—Å—ã–ª–æ–∫
                navLinks.forEach(link => {
                    link.classList.remove('active-page');
                });

                // –î–æ–±–∞–≤–ª—è–µ–º –∫–ª–∞—Å—Å active —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤—É—é—â–µ–π —Å—Å—ã–ª–∫–µ
                if (currentPageId) {
                    const activeLink = document.querySelector(`a[href="#${currentPageId}"]`);
                    if (activeLink) {
                        activeLink.classList.add('active-page');
                    }
                } else {
                    // –ï—Å–ª–∏ —Å–∫—Ä–æ–ª–ª –≤ —Å–∞–º–æ–º –≤–µ—Ä—Ö—É –¥–æ –ø–µ—Ä–≤–æ–π —Å–µ–∫—Ü–∏–∏ - –∞–∫—Ç–∏–≤–∏—Ä—É–µ–º –ø–µ—Ä–≤—É—é
                    if (window.scrollY < 100) {
                        document.querySelector('a[href="#page1"]').classList.add('active-page');
                    }
                }
            }

            // –§—É–Ω–∫—Ü–∏—è –¥–ª—è —Ä—É—á–Ω–æ–π —É—Å—Ç–∞–Ω–æ–≤–∫–∏ –∞–∫—Ç–∏–≤–Ω–æ–π –ø—Ä–∏ –∫–ª–∏–∫–µ
            function setActiveOnClick(clickedLink) {
                navLinks.forEach(link => link.classList.remove('active-page'));
                clickedLink.classList.add('active-page');
            }

            // –í–µ—à–∞–µ–º –æ–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –∫–ª–∏–∫–æ–≤
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    // –ù–µ –æ—Ç–∫–ª—é—á–∞–µ–º —Å—Ç–∞–Ω–¥–∞—Ä—Ç–Ω–æ–µ –ø–æ–≤–µ–¥–µ–Ω–∏–µ (–ø–µ—Ä–µ—Ö–æ–¥ –ø–æ —è–∫–æ—Ä—é)
                    setActiveOnClick(this);
                });
            });

            // –í–µ—à–∞–µ–º –æ–±—Ä–∞–±–æ—Ç—á–∏–∫ —Å–∫—Ä–æ–ª–ª–∞
            window.addEventListener('scroll', updateActivePageOnScroll);
            
            // –í—ã–∑—ã–≤–∞–µ–º —Å—Ä–∞–∑—É –¥–ª—è –ø—Ä–∞–≤–∏–ª—å–Ω–æ–π –ø–æ–¥—Å–≤–µ—Ç–∫–∏ –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
            updateActivePageOnScroll();
        });
    </script>
</body>
</html>
